    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const APP_STORAGE_KEY = 'leFilDeLEvolution_v2'; // Version updated to prevent conflicts
            const infoBox = document.getElementById('info-box');
            const notesContainer = document.getElementById('notes-container'); 
            const moodButtons = document.querySelectorAll('.mood-btn');
            const userNotes = document.getElementById('user-notes'); 
            const saveNotesButton = document.getElementById('save-notes-button');
            const loadNotesButton = document.getElementById('load-notes-button');
            const saveFeedback = document.getElementById('save-feedback');
            const audioModal = document.getElementById('audio-modal');
            const modalTitleElem = document.getElementById('modal-title');
            const closeModalButton = document.querySelector('.close-modal');
            const audioPlaceholderText = document.getElementById('audio-placeholder-text');
            const navLinks = document.querySelectorAll('#nav-bar a[href^="#jour-"], #nav-bar a[href^="#section-"]'); 
            const sections = document.querySelectorAll('.day-row');
            const navBarElem = document.getElementById('nav-bar');
            let navBarHeight = navBarElem ? navBarElem.offsetHeight : 70;
            let lastKnownScrollPosition = 0; let ticking = false;
            const generateSummaryButton = document.getElementById('generate-summary-button'); 
            const summaryResultsArea = document.getElementById('summary-results-area'); 
            const dailyProgressScoresContainer = document.getElementById('daily-progress-scores-container'); 
            const analysisTextElement = document.getElementById('analysis-text'); 
