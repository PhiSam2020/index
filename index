            const texteReflexionsClesInput = document.getElementById('app-texte-reflexions-cles');
            const texteNotesPersonnellesTextarea = document.getElementById('app-texte-notes-personnelles');
            const texteIdInput = document.getElementById('app-texte-id'); 
            const saveUpdateTexteBtn = document.getElementById('app-save-update-texte-btn');
            const clearTexteFormBtn = document.getElementById('app-clear-texte-form-btn');
            const textesListDiv = document.getElementById('app-textes-list');
            const textePreviewArea = document.getElementById('app-texte-preview-area');
            const textesListPrintDiv = document.getElementById('app-textes-list-print');
            let appData = {}; 

            function getDefaultAppData() {
                 return { notesGeneral: '', moodCreative: null, dailyProgress: {}, dailyExercises: {}, images: {}, videos: {}, savedTextes: [], creativeProject: { title: '', text: '', concepts: '' } };
            }
            appData = getDefaultAppData(); 
            const orderedDayKeys = Array.from({ length: 20 }, (_, i) => `jour-${i + 1}`);
            
            // --- NOUVELLES FONCTIONS VIDEO ---
            function getYouTubeID(url) {
                const regExp = /^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|&v=)([^#&?]*).*/;
                const match = url.match(regExp);
                return (match && match[2].length === 11) ? match[2] : null;
            }
            
            function loadVideo(inputId, targetId) {
                const inputElement = document.getElementById(inputId);
                const targetContainer = document.getElementById(targetId);
                if (!inputElement || !targetContainer) return;
                
                const url = inputElement.value.trim();
                targetContainer.innerHTML = ''; // Clear previous content
                targetContainer.classList.remove('error');
                targetContainer.classList.add('empty');
            
                if (!url) { return; } // Just leave it empty if no URL
            
                const videoID = getYouTubeID(url);
                if (videoID) {
                    targetContainer.classList.remove('empty');
                    const iframe = document.createElement('iframe');
                    iframe.src = `https://www.youtube.com/embed/${videoID}?rel=0`;
                    iframe.title = "Lecteur vid√©o YouTube";
                    iframe.frameBorder = "0";
                    iframe.allow = "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share";
                    iframe.allowFullscreen = true;
                    targetContainer.appendChild(iframe);
                } else {
                    targetContainer.classList.remove('empty');
                    targetContainer.classList.add('error');
                }
            }
            
            function loadVideoFromInput(inputElement) {
                const inputId = inputElement.id;
                const button = document.querySelector(`.load-video-btn[data-input="${inputId}"]`);
                if(button) {
                    const targetId = button.dataset.target;
                    loadVideo(inputId, targetId);
                }
            }
            // --- FIN NOUVELLES FONCTIONS VIDEO ---

            function showFeedback(message, isError = false, duration = 3000) { if (!saveFeedback) return; saveFeedback.textContent = message; saveFeedback.style.backgroundColor = isError ? '#E74C3C' : 'var(--secondary-color)'; saveFeedback.style.color = 'white'; saveFeedback.style.display = 'block'; requestAnimationFrame(() => { saveFeedback.style.opacity = '1'; }); setTimeout(() => { saveFeedback.style.opacity = '0'; setTimeout(() => { saveFeedback.style.display = 'none'; }, 300); }, duration); }
            function getDailyScorePercentage(score, numQuestions) { if (typeof score !== 'number' || isNaN(score) || numQuestions <= 0) return 0; const minPossibleScore = numQuestions * 1; const maxPossibleScore = numQuestions * 5; if (maxPossibleScore === minPossibleScore) return score > 0 ? 100 : 0; const percentage = ((score - minPossibleScore) / (maxPossibleScore - minPossibleScore)) * 100; return Math.max(0, Math.min(100, Math.round(percentage))); }
            function updateSidebarVisibility() { const isDesktop = window.innerWidth >= 1250; if (infoBox && notesContainer) { infoBox.style.display = isDesktop ? 'flex' : 'none'; notesContainer.style.display = isDesktop ? 'flex' : 'none'; } const container = document.querySelector('.container'); if(container){ if (isDesktop) { container.style.marginLeft = `calc(var(--sidebar-left-width) + var(--sidebar-gap) + var(--content-sidebar-gap))`; container.style.marginRight = `calc(var(--sidebar-right-width) + var(--sidebar-gap) + var(--content-sidebar-gap))`; container.style.maxWidth = `calc(100% - (var(--sidebar-left-width) + var(--sidebar-right-width) + 2 * var(--sidebar-gap) + 2 * var(--content-sidebar-gap)))`; } else { container.style.marginLeft = 'auto'; container.style.marginRight = 'auto'; container.style.maxWidth = '100%'; if (window.innerWidth < 1250 && infoBox && notesContainer) { infoBox.style.display = 'flex'; notesContainer.style.display = 'flex'; infoBox.style.position = 'relative'; infoBox.style.top = 'auto'; infoBox.style.left = 'auto'; infoBox.style.width = 'calc(100% - 2rem)'; infoBox.style.margin = '1.5rem auto 1rem auto'; infoBox.style.maxHeight = 'none'; infoBox.style.overflowY = 'visible'; notesContainer.style.position = 'relative'; notesContainer.style.top = 'auto'; notesContainer.style.right = 'auto'; notesContainer.style.width = 'calc(100% - 2rem)'; notesContainer.style.margin = '1.5rem auto 1rem auto'; notesContainer.style.maxHeight = 'none'; notesContainer.style.overflowY = 'visible'; } } } }
            updateSidebarVisibility(); window.addEventListener('resize', updateSidebarVisibility);
            function updateDailyProgress(dayKey) { const formId = `form-adherence-${dayKey}`; const form = document.getElementById(formId); if (!form) return false; const questions = form.querySelectorAll('.question'); if (questions.length === 0) return false; const numQuestions = questions.length; let totalScore = 0; let answeredQuestions = 0; let currentAnswers = {}; questions.forEach((question, index) => { const radioName = `q${index + 1}-${dayKey}`; const checkedRadio = form.querySelector(`input[name="${radioName}"]:checked`); if (checkedRadio) { currentAnswers[radioName] = checkedRadio.value; totalScore += parseInt(checkedRadio.value, 10); answeredQuestions++; } else { currentAnswers[radioName] = null; } }); appData.dailyProgress[dayKey] = appData.dailyProgress[dayKey] || {}; appData.dailyProgress[dayKey].answers = currentAnswers; if (answeredQuestions === numQuestions) { appData.dailyProgress[dayKey].score = totalScore; const percentage = getDailyScorePercentage(totalScore, numQuestions); appData.dailyProgress[dayKey].percentage = percentage; updateResultsDisplay(dayKey, percentage, totalScore, numQuestions); return true; } else { delete appData.dailyProgress[dayKey].score; delete appData.dailyProgress[dayKey].percentage; const resultsContainer = document.getElementById(`results-${dayKey}`); if (resultsContainer) resultsContainer.style.display = 'none'; return false; } }
            function updateResultsDisplay(dayKey, percentage, score, numQuestions) { const resultsContainer = document.getElementById(`results-${dayKey}`); const resultBar = document.getElementById(`result-bar-${dayKey}`); const resultText = document.getElementById(`result-text-${dayKey}`); const dayTitleElement = document.querySelector(`#${dayKey} h2`); const dayName = dayTitleElement ? dayTitleElement.textContent.split('<small>')[0].trim() : `Jour ${dayKey.split('-')[1]}`; if (resultsContainer && resultBar && resultText) { resultsContainer.querySelector('h4').textContent = `Compr√©hension du ${dayName}`; resultBar.style.width = `${percentage}%`; let feedbackText = `Niveau de compr√©hension : ${percentage}%. `; if (percentage >= 80) feedbackText += "Excellente assimilation !"; else if (percentage >= 50) feedbackText += "Bonne compr√©hension, continuez d'explorer."; else feedbackText += "N'h√©sitez pas √† relire la th√©orie et les exemples."; resultText.textContent = feedbackText; resultsContainer.style.display = 'block'; } }
            document.querySelectorAll('.adherence-submit-btn').forEach(button => { const dayKey = button.dataset.day; if (!dayKey || !dayKey.startsWith('jour-')) return; button.addEventListener('click', () => { const form = document.getElementById(`form-adherence-${dayKey}`); if (!form) return; if (!updateDailyProgress(dayKey)) { showFeedback(`Veuillez r√©pondre √† toutes les questions de "${document.querySelector('#'+dayKey+' h2').textContent.split('<small>')[0].trim()}" pour voir votre r√©sultat.`, true, 4000); } form.querySelectorAll('label').forEach(lbl => lbl.classList.remove('checked-label')); form.querySelectorAll('input[type="radio"]:checked').forEach(radio => { radio.closest('label').classList.add('checked-label'); }); }); });
            document.querySelectorAll('form[id^="form-adherence-jour-"]').forEach(form => { form.addEventListener('change', (event) => { if (event.target.type === 'radio') { const dayKey = form.id.replace('form-adherence-', ''); const radioName = event.target.name; const value = event.target.value; if (!appData.dailyProgress[dayKey]) appData.dailyProgress[dayKey] = {}; if (!appData.dailyProgress[dayKey].answers) appData.dailyProgress[dayKey].answers = {}; appData.dailyProgress[dayKey].answers[radioName] = value; form.querySelectorAll(`label > input[name="${radioName}"]`).forEach(radioInGroup => { radioInGroup.closest('label').classList.remove('checked-label'); }); event.target.closest('label').classList.add('checked-label'); const resultsContainer = document.getElementById(`results-${dayKey}`); if (resultsContainer) resultsContainer.style.display = 'none'; delete appData.dailyProgress[dayKey].score; delete appData.dailyProgress[dayKey].percentage; } }); });
            document.querySelectorAll('.practice-area textarea').forEach(textarea => { textarea.addEventListener('input', () => { const dayKey = textarea.id.replace('practice-', ''); if(!appData.dailyExercises) appData.dailyExercises = {}; appData.dailyExercises[dayKey] = textarea.value; }); });
            const projectTitleInput = document.getElementById('project-title-jour-22'); const projectTextInput = document.getElementById('project-text-jour-22'); const projectConceptsInput = document.getElementById('project-concepts-cles-jour-22');
            if(projectTitleInput) projectTitleInput.addEventListener('input', () => { if(!appData.creativeProject) appData.creativeProject = {}; appData.creativeProject.title = projectTitleInput.value; }); if(projectTextInput) projectTextInput.addEventListener('input', () => { if(!appData.creativeProject) appData.creativeProject = {}; appData.creativeProject.text = projectTextInput.value; }); if(projectConceptsInput) projectConceptsInput.addEventListener('input', () => { if(!appData.creativeProject) appData.creativeProject = {}; appData.creativeProject.concepts = projectConceptsInput.value; });
            function saveData() { try { orderedDayKeys.forEach(dayKey => { const form = document.getElementById(`form-adherence-${dayKey}`); if (form) updateDailyProgress(dayKey); const practiceTextarea = document.getElementById(`practice-${dayKey}`); if (practiceTextarea) { if(!appData.dailyExercises) appData.dailyExercises = {}; appData.dailyExercises[dayKey] = practiceTextarea.value; } }); appData.notesGeneral = userNotes.value; const selectedMood = document.querySelector('.mood-btn.selected'); appData.moodCreative = selectedMood ? selectedMood.dataset.mood : null; appData.images = {}; appData.videos = {}; document.querySelectorAll('.image-url-input:not(#project-title-jour-22):not(#project-concepts-cles-jour-22):not(#app-texte-titre):not(#app-texte-theme):not(#app-texte-reflexions-cles)').forEach(input => { appData.images[input.id] = input.value; }); document.querySelectorAll('.video-url-input').forEach(input => { appData.videos[input.id] = input.value; }); if(!appData.creativeProject) appData.creativeProject = {}; if(projectTitleInput) appData.creativeProject.title = projectTitleInput.value; if(projectTextInput) appData.creativeProject.text = projectTextInput.value; if(projectConceptsInput) appData.creativeProject.concepts = projectConceptsInput.value; localStorage.setItem(APP_STORAGE_KEY, JSON.stringify(appData)); showFeedback('Toutes les donn√©es ont √©t√© sauvegard√©es avec succ√®s !'); } catch (error) { console.error('Erreur sauvegarde:', error); showFeedback('Erreur lors de la sauvegarde.', true); } }
            function loadData() { const savedData = localStorage.getItem(APP_STORAGE_KEY); if (savedData) { try { const parsedData = JSON.parse(savedData); appData = { ...getDefaultAppData(), ...parsedData }; appData.dailyProgress = appData.dailyProgress || {}; appData.dailyExercises = appData.dailyExercises || {}; appData.images = appData.images || {}; appData.videos = appData.videos || {}; appData.savedTextes = parsedData.savedTextes || []; appData.creativeProject = parsedData.creativeProject || { title: '', text: '', concepts: '' }; userNotes.value = appData.notesGeneral || ''; moodButtons.forEach(btn => btn.classList.remove('selected')); if (appData.moodCreative) { const selectedBtn = document.querySelector(`.mood-btn[data-mood="${appData.moodCreative}"]`); if (selectedBtn) selectedBtn.classList.add('selected'); } orderedDayKeys.forEach(dayKey => { const form = document.getElementById(`form-adherence-${dayKey}`); const dayData = appData.dailyProgress[dayKey]; const resultsContainer = document.getElementById(`results-${dayKey}`); if (form) { const questions = form.querySelectorAll('.question'); const numQuestions = questions.length; form.querySelectorAll('input[type="radio"]').forEach(radio => radio.checked = false); form.querySelectorAll('label').forEach(lbl => lbl.classList.remove('checked-label')); if (dayData && dayData.answers && numQuestions > 0) { let allAnswered = true; let currentScore = 0; questions.forEach((q, index) => { const radioName = `q${index + 1}-${dayKey}`; const savedValue = dayData.answers[radioName]; if (savedValue !== null && savedValue !== undefined) { const radioToCheck = form.querySelector(`input[name="${radioName}"][value="${savedValue}"]`); if (radioToCheck) { radioToCheck.checked = true; radioToCheck.closest('label').classList.add('checked-label'); currentScore += parseInt(savedValue, 10); } else { allAnswered = false;} } else { allAnswered = false;} }); if (allAnswered) { appData.dailyProgress[dayKey].score = currentScore; const percentage = getDailyScorePercentage(currentScore, numQuestions); appData.dailyProgress[dayKey].percentage = percentage; updateResultsDisplay(dayKey, percentage, currentScore, numQuestions); } else { delete appData.dailyProgress[dayKey].score; delete appData.dailyProgress[dayKey].percentage; if (resultsContainer) resultsContainer.style.display = 'none'; } } else { if (resultsContainer) resultsContainer.style.display = 'none'; } } const practiceTextarea = document.getElementById(`practice-${dayKey}`); if (practiceTextarea && appData.dailyExercises && appData.dailyExercises[dayKey] !== undefined) { practiceTextarea.value = appData.dailyExercises[dayKey]; } }); if (appData.creativeProject) { if(projectTitleInput) projectTitleInput.value = appData.creativeProject.title || ''; if(projectTextInput) projectTextInput.value = appData.creativeProject.text || ''; if(projectConceptsInput) projectConceptsInput.value = appData.creativeProject.concepts || ''; } for (const inputId in appData.images) { if (appData.images.hasOwnProperty(inputId)) { const inputElement = document.getElementById(inputId); if (inputElement) { inputElement.value = appData.images[inputId] || ''; if (appData.images[inputId]) { const button = document.querySelector(`.load-image-btn[data-input="${inputId}"]`); if (button) { const previewId = button.dataset.preview; const previewImg = document.getElementById(previewId); if (previewImg) loadImage(inputElement, previewImg); } } else { const button = document.querySelector(`.load-image-btn[data-input="${inputId}"]`); if (button) { const previewId = button.dataset.preview; const previewImg = document.getElementById(previewId); const wrapper = previewImg ? previewImg.parentElement : null; if(previewImg) previewImg.src = ''; if(wrapper) {wrapper.classList.add('empty'); wrapper.classList.remove('error');} } } } } } for (const inputId in appData.videos) { if (appData.videos.hasOwnProperty(inputId)) { const inputElement = document.getElementById(inputId); if (inputElement) { inputElement.value = appData.videos[inputId] || ''; if (inputElement.value) { loadVideoFromInput(inputElement); } } } } renderSavedTextesList(); showFeedback('Donn√©es charg√©es avec succ√®s !'); let hasAnyScore = orderedDayKeys.some(key => appData.dailyProgress[key] && appData.dailyProgress[key].score !== undefined); if (hasAnyScore && summaryResultsArea) { generateOverallSummary(); } else if (summaryResultsArea) { summaryResultsArea.style.display = 'none'; } } catch (error) { console.error('Erreur chargement:', error); showFeedback('Erreur chargement. R√©initialisation.', true); appData = getDefaultAppData(); /* Reset UI */ } } else { showFeedback('Aucune donn√©e sauvegard√©e trouv√©e.', true); appData = getDefaultAppData(); /* Reset UI */ } }
            if (saveNotesButton) saveNotesButton.addEventListener('click', saveData); if (loadNotesButton) loadNotesButton.addEventListener('click', loadData); moodButtons.forEach(button => { button.addEventListener('click', () => { moodButtons.forEach(btn => btn.classList.remove('selected')); button.classList.add('selected'); appData.moodCreative = button.dataset.mood; }); });
            function loadImage(inputElement, previewImg) { const url = inputElement.value.trim(); const wrapper = previewImg.parentElement; wrapper.classList.remove('error', 'empty'); previewImg.src = ''; previewImg.alt = ''; if (!url) { wrapper.classList.add('empty'); return; } if (!url.match(/^https?:\/\/.+\..+/)) { wrapper.classList.add('error'); previewImg.alt = 'URL invalide'; return; } previewImg.onload = () => { wrapper.classList.remove('empty', 'error'); previewImg.alt = `Aper√ßu ${inputElement.id}`; }; previewImg.onerror = () => { wrapper.classList.add('error'); previewImg.alt = 'Erreur chargement image'; }; previewImg.src = url; }
            document.querySelectorAll('.load-image-btn').forEach(button => { button.addEventListener('click', () => { const inputId = button.dataset.input; const previewId = button.dataset.preview; const inputElement = document.getElementById(inputId); const previewImg = document.getElementById(previewId); if (inputElement && previewImg) loadImage(inputElement, previewImg); }); });
            document.querySelectorAll('.image-url-input').forEach(input => { input.addEventListener('input', () => { const button = document.querySelector(`.load-image-btn[data-input="${input.id}"]`); if(button){ const previewId = button.dataset.preview; const previewImg = document.getElementById(previewId); const previewWrapper = previewImg?.parentElement; if (previewWrapper) { previewWrapper.classList.remove('error'); if(!input.value.trim()){ previewWrapper.classList.add('empty'); if(previewImg) previewImg.src = ''; } else { previewWrapper.classList.remove('empty'); } } } }); });
            document.querySelectorAll('.load-video-btn').forEach(button => { button.addEventListener('click', () => { const inputId = button.dataset.input; const targetId = button.dataset.target; loadVideo(inputId, targetId); }); });
            document.querySelectorAll('.audio-button').forEach(button => { button.addEventListener('click', () => { const audioKey = button.dataset.audio; modalTitleElem.textContent = `Audio: ${audioKey}`; audioPlaceholderText.style.display = 'block'; audioModal.classList.add('show'); }); }); if (closeModalButton) { closeModalButton.addEventListener('click', () => audioModal.classList.remove('show')); } if (audioModal) { audioModal.addEventListener('click', (event) => { if (event.target === audioModal) { audioModal.classList.remove('show'); } }); }
            function updateNavHighlight() { let index = sections.length; while(--index && window.scrollY + navBarHeight + 50 < sections[index].offsetTop) {} navLinks.forEach((link) => link.classList.remove('active')); if (index >= 0 && index < sections.length) { const activeSectionId = sections[index].id; const activeLink = document.querySelector(`#nav-bar a[href="#${activeSectionId}"]`); if (activeLink) activeLink.classList.add('active'); } }
            window.addEventListener('scroll', () => { lastKnownScrollPosition = window.scrollY; if (!ticking) { window.requestAnimationFrame(() => { updateNavHighlight(); ticking = false; }); ticking = true; } }, { passive: true }); window.addEventListener('resize', () => { if (navBarElem) navBarHeight = navBarElem.offsetHeight; updateNavHighlight(); }); updateNavHighlight();
            function generateOverallSummary() { if (!appData || !appData.dailyProgress) { showFeedback('Donn√©es non initialis√©es.', true); return; } dailyProgressScoresContainer.innerHTML = ''; let totalDaysWithScores = 0; let sumOfPercentages = 0; orderedDayKeys.forEach(dayKey => { const dayData = appData.dailyProgress[dayKey]; const dayTitleElement = document.querySelector(`#${dayKey} h2`); const dayName = dayTitleElement ? dayTitleElement.textContent.split('<small>')[0].trim() : `Jour ${dayKey.split('-')[1]}`; let percentage = (dayData && dayData.percentage !== undefined) ? dayData.percentage : 0; let scoreText = (dayData && dayData.percentage !== undefined) ? `${percentage}% d'int√©gration` : "Non √©valu√©"; if (dayData && dayData.percentage !== undefined) { totalDaysWithScores++; sumOfPercentages += percentage; } let barColor = 'var(--accent-color)'; if (percentage >= 80) barColor = 'var(--secondary-color)'; else if (percentage < 40 && scoreText !== "Non √©valu√©") barColor = '#F39C12'; const itemHTML = `<div class="category-score-item"><strong>${dayName}</strong><div class="graph-bar-container"><div class="graph-bar" style="width: ${percentage}%; background-color: ${barColor};"></div></div><p>${scoreText}</p></div>`; dailyProgressScoresContainer.innerHTML += itemHTML; }); if (totalDaysWithScores === 0) { dailyProgressScoresContainer.innerHTML = '<p class="text-center text-gray-500 italic">Aucune √©valuation. Compl√©tez les questionnaires.</p>'; } generateAnalysisTextForIntegration(sumOfPercentages, totalDaysWithScores); summaryResultsArea.style.display = 'block'; }
            function generateAnalysisTextForIntegration(sumOfPercentages, totalDaysWithScores) { if (!analysisTextElement) return; let analysis = "Votre parcours d'int√©gration :<br><ul>"; const averageIntegration = totalDaysWithScores > 0 ? Math.round(sumOfPercentages / totalDaysWithScores) : 0; if (totalDaysWithScores < 5) { analysis += `<li>Vous avez bien entam√© votre exploration. Continuez pour un bilan plus √©toff√©.</li>`; } else if (averageIntegration >= 75) { analysis += `<li><strong>Excellente int√©gration globale</strong> (${averageIntegration}%) ! Vous avez une solide compr√©hension des outils.</li>`; } else if (averageIntegration >= 50) { analysis += `<li><strong>Bonne int√©gration d'ensemble</strong> (${averageIntegration}%). Vous progressez bien.</li>`; } else if (averageIntegration > 0) { analysis += `<li>Votre niveau d'int√©gration est de ${averageIntegration}%. Concentrez-vous sur la pratique des concepts moins clairs.</li>`; } else { analysis += `<li>Commencez par √©valuer votre compr√©hension pour chaque jour.</li>`; } analysis += "</ul>"; analysisTextElement.innerHTML = analysis; }
            if (generateSummaryButton) { generateSummaryButton.addEventListener('click', generateOverallSummary); }
            async function generatePdf() { showFeedback("G√©n√©ration du PDF..."); orderedDayKeys.forEach(dayKey => updateDailyProgress(dayKey)); generateOverallSummary(); renderSavedTextesListToPrint(); await new Promise(resolve => setTimeout(resolve, 500)); const { jsPDF } = window.jspdf; const pdf = new jsPDF({ orientation: 'p', unit: 'pt', format: 'a4' }); const margin = 40; const pdfWidth = pdf.internal.pageSize.getWidth(); const contentWidth = pdfWidth - 2 * margin; let currentY = margin; const pageHeight = pdf.internal.pageSize.getHeight(); function addText(text, x, y, options = {}) { const fontSize = options.fontSize || 10; const lineHeight = fontSize * (options.lineHeightFactor || 1.2); pdf.setFontSize(fontSize); if (options.fontStyle) pdf.setFont(undefined, options.fontStyle); const splitText = pdf.splitTextToSize(text, contentWidth - (options.isListItem ? 15 : 0)); if (y + splitText.length * lineHeight > pageHeight - margin) { pdf.addPage(); y = margin; } pdf.text(splitText, x + (options.isListItem ? 10 : 0), y); if (options.fontStyle) pdf.setFont(undefined, "normal"); return y + splitText.length * lineHeight; } try { pdf.setFont("helvetica", "bold"); currentY = addText("Le Fil de l'√âvolution - Mon Parcours", pdfWidth / 2, currentY, { fontSize: 16, align: 'center' }); currentY += 20; for (const dayKey of orderedDayKeys) { const daySection = document.getElementById(dayKey); if (!daySection) continue; const dayTitle = daySection.querySelector("h2")?.textContent.split('<small>')[0].trim(); if(!dayTitle) continue; if (currentY + 50 > pageHeight - margin) { pdf.addPage(); currentY = margin; } currentY = addText(dayTitle, margin, currentY, { fontSize: 14, fontStyle: 'bold' }); const practiceText = appData.dailyExercises[dayKey]; if (practiceText) { currentY = addText("Ma R√©flexion :", margin, currentY, { fontSize: 10, fontStyle: 'bold' }); currentY = addText(practiceText, margin, currentY, { fontSize: 9, fontStyle: 'italic' }); currentY += 5; } currentY += 10; } pdf.save('Mon_Parcours_Evolution.pdf'); showFeedback("PDF g√©n√©r√© !"); } catch (e) { console.error("PDF Error:", e); showFeedback("Erreur PDF.", true); } }
            if (printSummaryButton) { printSummaryButton.addEventListener('click', () => { orderedDayKeys.forEach(dayKey => updateDailyProgress(dayKey)); generateOverallSummary(); renderSavedTextesListToPrint(); setTimeout(() => { window.print(); }, 750); }); }
            if (pdfSummaryButton) { pdfSummaryButton.addEventListener('click', generatePdf); }
            // --- Gestion Espace Perso ---
            if (texteForm) { texteForm.addEventListener('submit', function(e) { e.preventDefault(); const titre = texteTitreInput.value.trim(); const theme = texteThemeInput.value.trim(); const contenu = texteContenuTextarea.value.trim(); const reflexions = texteReflexionsClesInput.value.trim(); const notes = texteNotesPersonnellesTextarea.value.trim(); const id = texteIdInput.value; if (!titre || !contenu) { alert("Le titre et le contenu sont requis."); return; } const texteData = { titre, theme, contenu, reflexions, notes }; if (id) { const index = appData.savedTextes.findIndex(t => t.id == id); if (index > -1) { appData.savedTextes[index] = { ...appData.savedTextes[index], ...texteData }; showFeedback("√âcrit mis √† jour !"); } } else { texteData.id = Date.now(); appData.savedTextes.push(texteData); showFeedback("√âcrit sauvegard√© !"); } renderSavedTextesList(); clearTexteForm(false); viewTexte(texteData.id ? texteData.id : appData.savedTextes[appData.savedTextes.length-1].id ); }); }
            if (clearTexteFormBtn) { clearTexteFormBtn.addEventListener('click', () => clearTexteForm(true)); }
            function clearTexteForm(clearPreview = true) { if(texteForm) texteForm.reset(); if(texteIdInput) texteIdInput.value = ''; if(saveUpdateTexteBtn) { saveUpdateTexteBtn.innerHTML = '<i class="fas fa-save mr-2"></i>Sauvegarder'; saveUpdateTexteBtn.classList.remove('primary'); saveUpdateTexteBtn.classList.add('secondary'); } if (clearPreview && textePreviewArea) { textePreviewArea.innerHTML = `<div class="texte-preview-placeholder"><i class="fas fa-book-open fa-3x" style="color: var(--primary-color); margin-bottom: 15px;"></i><p>S√©lectionnez un √©crit.</p></div>`; } if(texteTitreInput) texteTitreInput.focus(); }
            function renderSavedTextesList() { if (!textesListDiv) return; if (!appData.savedTextes || appData.savedTextes.length === 0) { textesListDiv.innerHTML = '<p class="text-sm italic text-center">Aucun √©crit.</p>'; return; } textesListDiv.innerHTML = ''; const sortedTextes = [...appData.savedTextes].sort((a,b) => b.id - a.id); sortedTextes.forEach(texte => { const div = document.createElement('div'); div.className = 'texte-item'; div.innerHTML = `<h3>${texte.titre}</h3>${texte.theme ? `<p><strong>Th√®me :</strong> ${texte.theme}</p>` : ''}<p><em>${texte.contenu.substring(0, 70).replace(/\n/g, ' ')}...</em></p><div class="button-group" style="justify-content: flex-end;"><button onclick="window.viewTexte(${texte.id})" class="action primary" style="background-color: var(--primary-color); color: white;"><i class="fas fa-eye"></i></button><button onclick="window.editTexte(${texte.id})" class="action" style="background-color: var(--accent-color); color: white;"><i class="fas fa-edit"></i></button><button onclick="window.removeTexte(${texte.id})" class="action" style="background-color: #E74C3C; color: white;"><i class="fas fa-trash-alt"></i></button></div>`; textesListDiv.appendChild(div); }); }
            function renderSavedTextesListToPrint() { if (!textesListPrintDiv) return; textesListPrintDiv.innerHTML = ''; if (!appData.savedTextes || appData.savedTextes.length === 0) { textesListPrintDiv.innerHTML = '<p>Aucun √©crit.</p>'; return; } const sortedTextes = [...appData.savedTextes].sort((a,b) => b.id - a.id); sortedTextes.forEach(texte => { const div = document.createElement('div'); div.className = 'texte-item'; div.innerHTML = `<h3>${texte.titre}</h3>${texte.theme ? `<p><strong>Th√®me:</strong> ${texte.theme}</p>` : ''}<div class="texte-content-print">${texte.contenu.replace(/\n/g, '<br>')}</div>`; textesListPrintDiv.appendChild(div); }); }
            window.viewTexte = function(id) { const texte = appData.savedTextes.find(t => t.id == id); if (texte && textePreviewArea) { textePreviewArea.innerHTML = ''; const titleH3 = document.createElement('h3'); titleH3.textContent = texte.titre; titleH3.style.textAlign = 'center'; titleH3.style.color = 'var(--primary-color)'; textePreviewArea.appendChild(titleH3); if (texte.theme) { const themeP = document.createElement('p'); themeP.innerHTML = `<strong>Th√®me:</strong> ${texte.theme}`; themeP.style.fontStyle = 'italic'; themeP.style.color = 'var(--text-muted)'; textePreviewArea.appendChild(themeP); } const contentP = document.createElement('p'); contentP.textContent = texte.contenu; textePreviewArea.appendChild(contentP); if (texte.reflexions) { const reflexionsTitle = document.createElement('h4'); reflexionsTitle.textContent = "R√©flexions Cl√©s :"; reflexionsTitle.style.marginTop = "15px"; reflexionsTitle.style.color = "var(--secondary-color)"; textePreviewArea.appendChild(reflexionsTitle); const reflexionsP = document.createElement('p'); reflexionsP.textContent = texte.reflexions; textePreviewArea.appendChild(reflexionsP); } if (texte.notes) { const notesTitle = document.createElement('h4'); notesTitle.textContent = "Notes :"; notesTitle.style.marginTop = "15px"; notesTitle.style.color = "var(--secondary-color)"; textePreviewArea.appendChild(notesTitle); const notesP = document.createElement('p'); notesP.textContent = texte.notes; textePreviewArea.appendChild(notesP); } const textesSectionForScroll = document.getElementById('section-suivi-textes'); if (textesSectionForScroll) textesSectionForScroll.scrollIntoView({ behavior: "smooth", block: "start" }); } }
            window.editTexte = function(id) { const texte = appData.savedTextes.find(t => t.id == id); if (texte) { texteTitreInput.value = texte.titre; texteThemeInput.value = texte.theme || ''; texteContenuTextarea.value = texte.contenu; texteReflexionsClesInput.value = texte.reflexions || ''; texteNotesPersonnellesTextarea.value = texte.notes || ''; texteIdInput.value = texte.id; if(saveUpdateTexteBtn) { saveUpdateTexteBtn.innerHTML = '<i class="fas fa-save mr-2"></i>Mettre √† Jour'; saveUpdateTexteBtn.classList.remove('secondary'); saveUpdateTexteBtn.classList.add('primary'); } viewTexte(id); const textesSectionForScroll = document.getElementById('section-suivi-textes'); if (textesSectionForScroll) { textesSectionForScroll.scrollIntoView({ behavior: "smooth", block: "start" }); setTimeout(() => { if (texteTitreInput) texteTitreInput.focus(); }, 400); } else if (texteTitreInput) { texteTitreInput.focus(); } } }
            window.removeTexte = function(id) { if (confirm("Vraiment supprimer cet √©crit ?")) { appData.savedTextes = appData.savedTextes.filter(t => t.id != id); renderSavedTextesList(); if (texteIdInput && texteIdInput.value == id) { clearTexteForm(true); } } }
            loadData();
        });
    </script>
</body>
</html>

```
